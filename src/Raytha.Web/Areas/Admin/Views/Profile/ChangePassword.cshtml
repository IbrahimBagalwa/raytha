@model ChangePassword_ViewModel
@{
    ViewData["Title"] = "Profile > Change password";
    ViewData["ActiveSubMenu"] = "Change password";
}
<div class="py-4">
    <div class="d-flex justify-content-between w-100 flex-wrap">
        <div class="mb-3 mb-lg-0">
            <h1 class="h4">@ViewData["Title"]</h1>
        </div>
    </div>
</div>

<div class="row mb-4">
    <div class="col-xxl-7 col-xl-8 col-lg-9 col-md-12">
        <div class="card border-0 shadow mb-4">
            <div class="card-body">
                <form asp-route="profilechangepassword" method="post">
                    <div class="col-lg-12">
                        <div class="mb-3">
                            <label class="form-label raytha-required" asp-for="CurrentPassword"></label>
                            <input type="password" class="form-control @Model.HasError("CurrentPassword")" asp-for="CurrentPassword" required>
                            <div class="invalid-feedback">@Model.ErrorMessageFor("CurrentPassword")</div>
                        </div>
                    </div>
                    <div class="col-lg-12">
                        <div class="mb-3">
                            <label class="form-label raytha-required" asp-for="NewPassword"></label>
                            <input type="password" class="form-control @Model.HasError("NewPassword")" asp-for="NewPassword" required minlength="8">
                            <div class="invalid-feedback">@Model.ErrorMessageFor("NewPassword")</div>
                            <div class="form-text">Password must be at least 8 characters.</div>
                        </div>
                    </div>
                    <div class="col-lg-12">
                        <div class="mb-3">
                            <label class="form-label raytha-required" asp-for="ConfirmNewPassword"></label>
                            <input type="password" class="form-control @Model.HasError("ConfirmNewPassword")" asp-for="ConfirmNewPassword" required minlength="8">
                            <div class="invalid-feedback">@Model.ErrorMessageFor("ConfirmNewPassword")</div>
                            <div class="form-text">Password must match the above.</div>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-success mt-4">Save changes</button>
                </form>
            </div>
        </div>
    </div>
</div>