@model ContentTypesCreate_ViewModel
@{
    ViewData["Title"] = $"Content types > Create content type";
}

@(await Html.PartialAsync("_PageHeader", new PageHeader_ViewModel
{
    Title = ViewData["Title"].ToString()
}))

<div class="row mb-4">
    <div class="col-xxl-7 col-xl-8 col-lg-9 col-md-12">
        <div class="card border-0 shadow mb-4">
            <div class="card-body">
                <form asp-route="contenttypescreate" method="post" class="py-4" data-controller="shared--developername">
                    <div class="col-lg-12 col-md-12">
                        <div class="mb-3">
                            <label class="form-label raytha-required" asp-for="LabelPlural"></label>
                            <input type="text" class="form-control @Model.HasError("LabelPlural")" asp-for="LabelPlural" required
                                   data-shared--developername-target="label"
                                   data-action="keyup->shared--developername#setDeveloperName change->shared--developername#setDeveloperName">
                            <div class="invalid-feedback">@Model.ErrorMessageFor("LabelPlural")</div>
                        </div>
                    </div>
                    <div class="col-lg-12 col-md-12">
                        <div class="mb-3">
                            <label class="form-label raytha-required" asp-for="LabelSingular"></label>
                            <input type="text" class="form-control @Model.HasError("LabelSingular")" asp-for="LabelSingular" required>
                            <div class="invalid-feedback">@Model.ErrorMessageFor("LabelSingular")</div>
                        </div>
                    </div>
                    <div class="col-lg-12 col-md-12">
                        <div class="mb-3">
                            <label class="form-label raytha-required" asp-for="DeveloperName"></label>
                            <input type="text" class="form-control" asp-for="DeveloperName" data-shared--developername-target="developername">
                            <div class="invalid-feedback">@Model.ErrorMessageFor("DeveloperName")</div>
                            <div class="form-text">You cannot change the developer name after it has been created.</div>
                        </div>
                    </div>
                    <div class="col-lg-12 mt-4">
                        <label class="form-label raytha-required" asp-for="DefaultRouteTemplate"></label>
                        <div class="input-group mb-3">
                            <span class="input-group-text">@Model.WebsiteUrl</span>
                            <input type="text" class="form-control @Model.HasError("DefaultRouteTemplate")" asp-for="DefaultRouteTemplate" required>
                            <div class="invalid-feedback">@Model.ErrorMessageFor("DefaultRouteTemplate")</div>
                        </div>
                        <div class="form-text">Available variables: {PrimaryField}, {ContentTypeDeveloperName}, {Id}, {CurrentYear}, {CurrentMonth}</div>
                    </div>
                    <div class="col-lg-12 mt-4">
                        <div class="mb-3">
                            <label class="form-label" asp-for="@Model.Description"></label>
                            <textarea class="form-control @Model.HasError("Description")" asp-for="@Model.Description"></textarea>
                            <div class="invalid-feedback">@Model.ErrorMessageFor("Description")</div>
                        </div>
                    </div>  

                    <button type="submit" class="btn btn-success">Save</button>
                </form>
            </div>
        </div>
    </div>
</div>